# ====================================
# ResumeATS - Environment Variables
# ====================================
# Copy this file to .env.local and fill in your values

# SUPABASE (Database) - https://supabase.com → Project → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# STRIPE (Payments) - https://stripe.com → Developers → API Keys
# Use sk_test_ and pk_test_ for testing, sk_live_ and pk_live_ for production
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# OPENAI (AI) - https://platform.openai.com → API Keys
OPENAI_API_KEY=sk-your-openai-api-key

# APP URL
# Use http://localhost:3000 for local dev
# Use your Vercel URL for production
NEXT_PUBLIC_URL=http://localhost:3000

